<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s1.bankbook.BankBookDAO">
  
  
 	 <select id="getCount" resultType="java.lang.Long" parameterType="com.iu.s1.util.Pager">
  		SELECT COUNT(BOOKNUMBER) FROM BANKBOOK
  		WHERE 
			<choose>
			<when test="kind == 'num'">
			 BOOKNUMBER 
			 </when>
			 <when test="kind == 'name'">
			 BOOKNAME 
			 </when>
			 <otherwise>
			 BOOKRATE 
			 </otherwise>
			 </choose>
			 LIKE '%' || #{search} ||'%'
  	</select>
  
  
  	<select id="getSelect" parameterType="com.iu.s1.bankbook.BankBookDTO" resultType="com.iu.s1.bankbook.BankBookDTO">
  		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
  	</select>
  
	
	<select id="getList" resultType="com.iu.s1.bankbook.BankBookDTO" parameterType="com.iu.s1.util.Pager">
		SELECT * FROM 
		(SELECT rownum R, BK.* FROM 
		(SELECT * 
			FROM BANKBOOK
			WHERE 
			<choose>
			<when test="kind == 'num'">
			 BOOKNUMBER 
			 </when>
			 <when test="kind == 'name'">
			 BOOKNAME 
			 </when>
			 <otherwise>
			 BOOKRATE 
			 </otherwise>
			 </choose>
			 LIKE '%' || #{search} ||'%'
			ORDER BY BOOKNUMBER DESC
			) 
		BK
		) 
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<insert id="setInsert" parameterType="com.iu.s1.bankbook.BankBookDTO"  >
		INSERT INTO BANKBOOK VALUES(bankbook_seq.nextval,#{bookName},#{bookRate},#{bookSale})
		
	</insert>
	
	<delete id="setDelete" parameterType="java.lang.Long">
		DELETE BANKBOOK WHERE BOOKNUMBER=#{bookNumber} <!-- 여기 bookNumber는 DAO에서 Long 타입에 매개변수이름임. -->
	</delete>
	
	<update id="setUpdate" parameterType="com.iu.s1.bankbook.BankBookDTO">
		UPDATE BANKBOOK SET BOOKNAME=#{bookName}, BOOKRATE=#{bookRate}, BOOKSALE=#{bookSale}
		WHERE BOOKNUMBER=#{bookNumber}
	</update>
	
	<!-- <delete id="setDelete" parameterType="com.iu.s1.bankbook.BankBookDTO">
		DELETE BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
	</delete>
	   -->
  </mapper>